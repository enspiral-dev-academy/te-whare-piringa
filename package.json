{
  "name": "te-whare-piringa",
  "version": "0.2.0",
  "description": "A community hall scheduling app",
  "main": "server/index",
  "repository": "https://github.com/enspiral-dev-academy/te-whare-piringa",
  "author": "Enspiral Dev Academy",
  "license": "MIT",
  "scripts": {
    "build": "run-s prod:build",
    "dev:build": "webpack --watch --config webpack.config.dev.js",
    "dev:run": "nodemon --watch server",
    "dev": "run-p dev:*",
    "test": "jest --verbose",
    "lint": "eslint client server shared test",
    "start": "node server",
    "db:init:dev": "node scripts/init-dev-db",
    "db:init:prod": "node scripts/init-prod-db",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:seed:dev": "node scripts/db-seed-dev",
    "db:seed:prod": "node scripts/db-seed-prod",
    "prod:build": "webpack --config webpack.config.prod.js",
    "deploy-env-vars": "node scripts/deploy-env-vars",
    "postinstall": "run-p prod:build"
  },
  "engines": {
    "node": ">=12"
  },
  "jest": {
    "setupFiles": [
      "./client/setup-test-env.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "dependencies": {
    "authenticare": "^0.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mailgun-js": "^0.22.0",
    "moment": "^2.24.0",
    "mongodb": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "cheerio": "^1.0.0-rc.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-datetime": "^2.16.3",
    "react-dom": "^16.12.0",
    "react-gmaps": "^1.9.0",
    "react-modal": "^3.8.1",
    "react-redux": "^7.1.3",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "superagent": "^5.1.3",
    "supertest": "^4.0.2",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.1"
  }
}
